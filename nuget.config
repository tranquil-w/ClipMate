<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- 官方包源 -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />

    <!-- 备用包源 -->
    <add key="dotnet-tools" value="https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet-tools/nuget/v3/index.json" protocolVersion="3" />
  </packageSources>

  <!-- 包源映射 -->
  <packageSourceMapping>
    <!-- 默认映射到官方包源 -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>

  <!-- 包管理配置 -->
  <config>
    <!-- 使用仓库内缓存目录，避免跨平台环境变量差异 -->
    <add key="globalPackagesFolder" value=".nuget/packages" />

    <!-- 并行下载配置 -->
    <add key="http_timeout" value="300" />
  </config>

  <!-- 避免在非 Windows 环境引用 Visual Studio 的 fallback 目录（可能不存在而导致构建失败） -->
  <fallbackPackageFolders>
    <clear />
  </fallbackPackageFolders>

  <!-- 包签名验证 -->
  <config>
    <add key="signatureValidationMode" value="require" />
  </config>

</configuration>
