<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:ClipMate.Avalonia.Views"
    x:Class="ClipMate.Avalonia.MainWindow"
    Title="ClipMate"
    WindowStartupLocation="CenterScreen"
    Width="360"
    Height="420"
    MinWidth="240"
    MinHeight="300"
    SystemDecorations="None"
    ShowInTaskbar="False"
    Topmost="True"
    Background="Transparent"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    TransparencyLevelHint="Mica, AcrylicBlur, Blur">
  <Border
      CornerRadius="8"
      BorderThickness="1"
      BorderBrush="{DynamicResource ClipMateBorderBrush}"
      Background="{DynamicResource ClipMateBackgroundBrush}"
      Padding="6">
    <views:ClipboardView x:Name="ClipboardView" />
  </Border>
</Window>
