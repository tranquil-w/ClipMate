{
    "ConnectionStrings": {
        "ClipMateDb": "Data Source=ClipMate.db"
    },
    "HotKey": "Win + V", // 主窗口快捷键
    "FavoriteFilterHotKey": "Win + B", // 收藏筛选快捷键
    "Theme": "System", // 支持 "Light", "Dark", "System"
    "WindowPosition": "FollowCaret", // 支持 "FollowCaret", "FollowMouse", "ScreenCenter"
    "AutoStart": false,
    "SilentStart": false,
    "AlwaysRunAsAdmin": false,
    "HistoryLimit": 500,
    "ClipboardItemMaxHeight": 100,
    "EnableWinComboGuardInjection": true, // Win+V 拦截时注入 RightShift 保护 tap，降低开始菜单误触发概率
    "ImeHintsEnabled": true, // 无焦点模式下检测到 IME 组合输入时显示提示
    "LogLevel": "Information" // 支持 "Error", "Warning", "Information", "Debug"
}
